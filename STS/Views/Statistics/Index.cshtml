@model STS.ViewModels.StatisticsIndexViewModel
@using STS.Resources.Views
@{
    ViewBag.Title = Statistics.StatisticsIndexTitle;
}
<h2>@ViewBag.Title</h2>
<br /><hr /><br />
<div class="form-group">
    @Html.LabelFor(m => m.RegisteredShipments) <br />
    <text class="text-muted">@Model.RegisteredShipments</text>
</div><br />

<div class="form-group">
    @Html.LabelFor(m => m.ShipmentsWaitingShipping) <br />
    <text class="text-muted">@Model.ShipmentsWaitingShipping</text>
</div><br />
<div class="form-group">
    @Html.LabelFor(m => m.ShipmentsWaitingCollection) <br />
    <text class="text-muted">@Model.ShipmentsWaitingCollection</text>
</div><br />
<div class="form-group">
    @Html.LabelFor(m => m.CollectedShipments) <br />
    <text class="text-muted">@Model.CollectedShipments</text>
</div><br /><hr /><br />

<div class="form-group">
    @Html.LabelFor(m => m.NewShipments) <br /><br />
    <div id="NewShipments" style="width: 100%;height: 500px;"></div>
</div><br /><br />
<div class="form-group">
    @Html.LabelFor(m => m.ShipmentsCollection) <br /><br />
    <div id="ShipmentsCollection" style="width: 100%;height: 500px;"></div>
</div><br /><hr /><br />
<div class="form-group">
    @Html.LabelFor(m => m.NumberOfEmployees) <br />
    <text class="text-muted">@Model.NumberOfEmployees</text>
</div><br />
<div class="form-group">
    @Html.LabelFor(m => m.NumberOfLocations) <br />
    <text class="text-muted">@Model.NumberOfLocations</text>
</div><br />
<div class="form-group">
    @Html.LabelFor(m => m.AverageEmployeesPerLocation) <br />
    <text class="text-muted">@Model.AverageEmployeesPerLocation</text>
</div><br />
<script src="https://cdn.amcharts.com/lib/4/core.js"></script>
<script src="https://cdn.amcharts.com/lib/4/charts.js"></script>
<script src="https://cdn.amcharts.com/lib/4/themes/animated.js"></script>






