@using Microsoft.AspNet.Identity
@using STS.Resources.Layouts
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "form-inline ml-4" }))
    {
        @Html.AntiForgeryToken()
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">@User.Identity.GetUserName()</a>
            <div class="dropdown-menu mt-2">
            @Html.ActionLink(Partials.Profile, "Profile", "Account", routeValues: null, htmlAttributes: new { title = "Profile", @class = "dropdown-item" })
            <a href="javascript:document.getElementById('logoutForm').submit()" class="dropdown-item">@Partials.LogOff</a>
        </div>
        </li>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink(Partials.LogIn, "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
