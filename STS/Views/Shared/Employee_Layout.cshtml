@using STS.Resources.Layouts

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>@ViewBag.Title - STS</title>
    <script src="https://kit.fontawesome.com/4717f928a6.js" crossorigin="anonymous"></script>
    @Styles.Render("~/bundles/Styles")

</head>
<body  class="index-page sidebar-collapse">
    <nav class="navbar navbar-expand-lg fixed-top navbar-transparent " color-on-scroll="300">
        <div class="container">
            <div class="navbar-translate">
                <a class="navbar-brand" style="font-size:40px;" href="/Main" rel="tooltip" title="STS" data-placement="bottom">
                    STS
                </a>
                <button class="navbar-toggler navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-bar bar1"></span>
                    <span class="navbar-toggler-bar bar2"></span>
                    <span class="navbar-toggler-bar bar3"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse justify-content-end" id="navigation">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" rel="tooltip" title="@EmployeeLayout.Shipments" data-placement="bottom" href="/Shipments">
                            <i class='fas fa-boxes'></i>
                            <p class="d-lg-none">@EmployeeLayout.Shipments</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" rel="tooltip" title="@EmployeeLayout.RegisterNewShipment" data-placement="bottom" href="/Shipments/New">
                            <i class="fas fa-box"></i>
                            <p class="d-lg-none">@EmployeeLayout.RegisterNewShipment</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" rel="tooltip" title="@EmployeeLayout.RegisterShipmentArrival" data-placement="bottom" id="ShipmentArrival" href="#">
                            <i class='fas fa-dolly-flatbed'></i>
                            <p class="d-lg-none">@EmployeeLayout.RegisterShipmentArrival</p>
                        </a>
                    </li>
                    @Html.Partial("_ChangeLanguagePartial")
                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
        </div>
    </nav>
    <div class="page-header section-dark" style="background-image: url('https://cdn.drivingline.com/media/2295026/suzuki_keivan-31.jpg')">
        <div class="filter"></div>
    </div>
    <div class="main">
        <div class="container body-content">
            @RenderBody()
            <br />
            <br />
            <hr />
            @Html.Partial("_FooterPartial")
        </div>
    </div>
    <script src="/Language/ScriptsLocale/Shipments"></script>
    @Scripts.Render("~/bundles/Scripts")
    @Scripts.Render("~/bundles/EmployeeScripts")
    @RenderSection("scripts", required: false)
</body>
</html>
